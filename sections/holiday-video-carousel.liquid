{{ 'section-holiday-video-carousel.min.css' | asset_url | stylesheet_tag }}

{% comment %}
  Holiday Video Carousel Section
  Purpose: Display Jack's holiday character skits in TikTok-style carousel
  Features: Swipeable mobile, arrow navigation desktop, video controls, lazy loading
{% endcomment %}

<div
  class="holiday-video-carousel wrapper-spacing--v wrapper-spacing--h color-scheme--{{ section.settings.colors }}"
  data-wetheme-section-type="holiday-video-carousel"
  data-wetheme-section-id="{{ section.id }}"
  style="--padding-section-top: {{ section.settings.section_padding_top }}px; --padding-section-bottom: {{ section.settings.section_padding_bottom }}px;"
>
  <div class="width--content">

    {%comment%} Section Header {%endcomment%}
    {% if section.settings.heading != blank %}
      <div class="holiday-video-carousel__header">
        <h2 class="holiday-video-carousel__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="holiday-video-carousel__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {%comment%} Main Carousel Container {%endcomment%}
    <div class="holiday-video-carousel__container" data-carousel-id="{{ section.id }}">

      {%comment%} Video Player Area {%endcomment%}
      <div class="holiday-video-carousel__player-wrapper">

        {%comment%} Video Display {%endcomment%}
        <div class="holiday-video-carousel__videos" data-videos-container>
          {% for block in section.blocks %}
            {% if block.type == 'video' %}
              <div
                class="holiday-video-carousel__video-item {% if forloop.first %}active{% endif %}"
                data-video-index="{{ forloop.index0 }}"
                data-video-id="video-{{ block.id }}"
                {{ block.shopify_attributes }}
              >
                {%comment%} Video Element {%endcomment%}
                {% if block.settings.video != blank %}
                  {% comment %} Shopify hosted video {%endcomment%}
                  <video
                    class="holiday-video-carousel__video"
                    {% if block.settings.poster_image != blank %}poster="{{ block.settings.poster_image | img_url: '1200x1200' }}"{% endif %}
                    {% if section.settings.mute_by_default %}muted{% endif %}
                    {% unless forloop.first %}preload="none"{% endunless %}
                    playsinline
                    data-video-element
                  >
                    {% for source in block.settings.video.sources %}
                      <source src="{{ source.url }}" type="{{ source.mime_type }}">
                    {% endfor %}
                    Your browser does not support the video tag.
                  </video>

                {% elsif block.settings.video_url != blank %}
                  {% comment %} URL embedded video (YouTube/Vimeo) {%endcomment%}
                  <div class="holiday-video-carousel__video-embed">
                    {% if block.settings.video_url.type == 'youtube' %}
                      <iframe
                        src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}?enablejsapi=1{% if section.settings.mute_by_default %}&mute=1{% endif %}"
                        frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                        data-video-element
                      ></iframe>
                    {% elsif block.settings.video_url.type == 'vimeo' %}
                      <iframe
                        src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}?{% if section.settings.mute_by_default %}muted=1{% endif %}"
                        frameborder="0"
                        allow="autoplay; fullscreen; picture-in-picture"
                        allowfullscreen
                        data-video-element
                      ></iframe>
                    {% endif %}
                  </div>

                {% else %}
                  {% comment %} Placeholder {%endcomment%}
                  <div class="holiday-video-carousel__placeholder">
                    {{ 'lifestyle-1' | placeholder_svg_tag: 'icon icon--placeholder' }}
                    <p>Video will appear here</p>
                  </div>
                {% endif %}

                {%comment%} Video Controls {%endcomment%}
                <div class="holiday-video-carousel__controls">
                  <button class="holiday-video-carousel__play-pause" data-play-pause aria-label="Play/Pause">
                    <svg class="holiday-video-carousel__icon holiday-video-carousel__icon--play" width="24" height="24" viewBox="0 0 24 24" fill="none">
                      <path d="M8 5v14l11-7z" fill="currentColor"/>
                    </svg>
                    <svg class="holiday-video-carousel__icon holiday-video-carousel__icon--pause" width="24" height="24" viewBox="0 0 24 24" fill="none" style="display:none;">
                      <path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z" fill="currentColor"/>
                    </svg>
                  </button>

                  <div class="holiday-video-carousel__progress-bar" data-progress-bar>
                    <div class="holiday-video-carousel__progress-fill" data-progress-fill></div>
                  </div>

                  <button class="holiday-video-carousel__mute" data-mute aria-label="Mute/Unmute">
                    <svg class="holiday-video-carousel__icon holiday-video-carousel__icon--volume" width="24" height="24" viewBox="0 0 24 24" fill="none">
                      <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02z" fill="currentColor"/>
                    </svg>
                    <svg class="holiday-video-carousel__icon holiday-video-carousel__icon--mute" width="24" height="24" viewBox="0 0 24 24" fill="none" style="display:none;">
                      <path d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51C20.63 14.91 21 13.5 21 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73l-9-9L4.27 3zM12 4L9.91 6.09 12 8.18V4z" fill="currentColor"/>
                    </svg>
                  </button>

                  <span class="holiday-video-carousel__timer" data-timer>0:00 / 0:00</span>
                </div>

                {%comment%} Video Info Overlay {%endcomment%}
                {% if block.settings.video_title != blank or block.settings.video_description != blank %}
                  <div class="holiday-video-carousel__info">
                    {% if block.settings.video_title != blank %}
                      <h3 class="holiday-video-carousel__video-title">{{ block.settings.video_title }}</h3>
                    {% endif %}
                    {% if block.settings.video_description != blank %}
                      <p class="holiday-video-carousel__video-description">{{ block.settings.video_description }}</p>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>

        {%comment%} Navigation Arrows (Desktop) {%endcomment%}
        {% if section.blocks.size > 1 %}
          <button class="holiday-video-carousel__arrow holiday-video-carousel__arrow--prev" data-carousel-prev aria-label="Previous video">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <path d="M15 18l-6-6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
          <button class="holiday-video-carousel__arrow holiday-video-carousel__arrow--next" data-carousel-next aria-label="Next video">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <path d="M9 6l6 6-6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </button>
        {% endif %}

        {%comment%} Video Counter {%endcomment%}
        {% if section.blocks.size > 1 %}
          <div class="holiday-video-carousel__counter" data-counter>
            <span data-current-index>1</span> / <span data-total-videos>{{ section.blocks.size }}</span>
          </div>
        {% endif %}
      </div>

      {%comment%} Recipe Card Sidebar (only shows for first video if recipe exists) {%endcomment%}
      {% if section.settings.show_recipe_card %}
        <div class="holiday-video-carousel__recipe-sidebar" data-recipe-sidebar>
          {% render 'holiday-recipe-card' with
            recipe_title: section.settings.recipe_title,
            recipe_description: section.settings.recipe_description,
            recipe_ingredients: section.settings.recipe_ingredients,
            recipe_instructions: section.settings.recipe_instructions,
            recipe_image: section.settings.recipe_image,
            prep_time: section.settings.prep_time,
            servings: section.settings.servings
          %}
        </div>
      {% endif %}
    </div>

    {%comment%} Thumbnail Navigation (Optional) {%endcomment%}
    {% if section.settings.show_thumbnails and section.blocks.size > 1 %}
      <div class="holiday-video-carousel__thumbnails">
        {% for block in section.blocks %}
          {% if block.type == 'video' %}
            <button
              class="holiday-video-carousel__thumbnail {% if forloop.first %}active{% endif %}"
              data-thumbnail-index="{{ forloop.index0 }}"
              aria-label="Play video {{ forloop.index }}"
            >
              {% if block.settings.poster_image != blank %}
                <img src="{{ block.settings.poster_image | img_url: '200x200' }}" alt="{{ block.settings.video_title | escape }}" loading="lazy">
              {% else %}
                <div class="holiday-video-carousel__thumbnail-placeholder">{{ forloop.index }}</div>
              {% endif %}
            </button>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

  </div>
</div>

<style>
  .holiday-video-carousel {
    background: {{ section.settings.background_color }};
  }

  .holiday-video-carousel__header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .holiday-video-carousel__heading {
    font-size: 2.5rem;
    font-weight: 700;
    color: {{ section.settings.heading_color }};
    margin-bottom: 0.5rem;
  }

  .holiday-video-carousel__subheading {
    font-size: 1.125rem;
    color: {{ section.settings.text_color }};
  }

  .holiday-video-carousel__container {
    display: grid;
    grid-template-columns: {% if section.settings.show_recipe_card %}2fr 1fr{% else %}1fr{% endif %};
    gap: 2rem;
    align-items: start;
  }

  .holiday-video-carousel__player-wrapper {
    position: relative;
  }

  .holiday-video-carousel__videos {
    position: relative;
    border-radius: {{ section.settings.video_border_radius }}px;
    overflow: hidden;
    background: #000;
    aspect-ratio: {{ section.settings.video_aspect_ratio }};
  }

  .holiday-video-carousel__video-item {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .holiday-video-carousel__video-item.active {
    opacity: 1;
    pointer-events: auto;
  }

  .holiday-video-carousel__video,
  .holiday-video-carousel__video-embed iframe {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .holiday-video-carousel__placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    color: #666;
  }

  .holiday-video-carousel__controls {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    color: white;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .holiday-video-carousel__video-item:hover .holiday-video-carousel__controls,
  .holiday-video-carousel__controls:focus-within {
    opacity: 1;
  }

  .holiday-video-carousel__play-pause,
  .holiday-video-carousel__mute {
    background: none;
    border: none;
    color: white;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .holiday-video-carousel__progress-bar {
    flex: 1;
    height: 4px;
    background: rgba(255,255,255,0.3);
    border-radius: 2px;
    cursor: pointer;
    position: relative;
  }

  .holiday-video-carousel__progress-fill {
    height: 100%;
    background: {{ section.settings.accent_color }};
    border-radius: 2px;
    width: 0%;
    transition: width 0.1s linear;
  }

  .holiday-video-carousel__timer {
    font-size: 0.875rem;
    white-space: nowrap;
  }

  .holiday-video-carousel__info {
    position: absolute;
    bottom: 4rem;
    left: 1rem;
    right: 1rem;
    color: white;
    text-shadow: 0 2px 4px rgba(0,0,0,0.5);
  }

  .holiday-video-carousel__video-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .holiday-video-carousel__video-description {
    font-size: 1rem;
    opacity: 0.9;
  }

  .holiday-video-carousel__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0,0,0,0.5);
    border: none;
    color: white;
    padding: 1rem;
    cursor: pointer;
    border-radius: 50%;
    transition: background 0.2s ease;
    z-index: 10;
  }

  .holiday-video-carousel__arrow:hover {
    background: rgba(0,0,0,0.8);
  }

  .holiday-video-carousel__arrow--prev {
    left: 1rem;
  }

  .holiday-video-carousel__arrow--next {
    right: 1rem;
  }

  .holiday-video-carousel__counter {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: rgba(0,0,0,0.7);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.875rem;
    z-index: 10;
  }

  .holiday-video-carousel__recipe-sidebar {
    position: sticky;
    top: 2rem;
  }

  .holiday-video-carousel__thumbnails {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .holiday-video-carousel__thumbnail {
    width: 100px;
    height: 100px;
    border-radius: 8px;
    overflow: hidden;
    border: 3px solid transparent;
    cursor: pointer;
    transition: border-color 0.2s ease;
    background: #000;
  }

  .holiday-video-carousel__thumbnail.active {
    border-color: {{ section.settings.accent_color }};
  }

  .holiday-video-carousel__thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .holiday-video-carousel__thumbnail-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    font-size: 2rem;
    color: #666;
  }

  {%comment%} Mobile Responsive {%endcomment%}
  @media (max-width: 768px) {
    .holiday-video-carousel__container {
      grid-template-columns: 1fr;
    }

    .holiday-video-carousel__recipe-sidebar {
      position: static;
    }

    .holiday-video-carousel__arrow {
      display: none;
    }

    .holiday-video-carousel__videos {
      aspect-ratio: 9 / 16;
    }

    .holiday-video-carousel__heading {
      font-size: 2rem;
    }

    .holiday-video-carousel__info {
      bottom: 3rem;
    }

    .holiday-video-carousel__video-title {
      font-size: 1.25rem;
    }

    .holiday-video-carousel__thumbnails {
      gap: 0.5rem;
    }

    .holiday-video-carousel__thumbnail {
      width: 70px;
      height: 70px;
    }
  }

  {%comment%} Tablet {%endcomment%}
  @media (min-width: 769px) and (max-width: 1024px) {
    .holiday-video-carousel__container {
      grid-template-columns: 1fr;
    }

    .holiday-video-carousel__recipe-sidebar {
      position: static;
      margin-top: 2rem;
    }
  }
</style>

<script>
  // Holiday Video Carousel JavaScript
  (function() {
    const carouselId = '{{ section.id }}';
    const container = document.querySelector(`[data-carousel-id="${carouselId}"]`);
    if (!container) return;

    const videoItems = container.querySelectorAll('.holiday-video-carousel__video-item');
    const prevBtn = container.querySelector('[data-carousel-prev]');
    const nextBtn = container.querySelector('[data-carousel-next]');
    const thumbnails = container.querySelectorAll('[data-thumbnail-index]');
    const currentIndexEl = container.querySelector('[data-current-index]');

    let currentIndex = 0;

    function showVideo(index) {
      // Pause all videos
      videoItems.forEach((item, i) => {
        const video = item.querySelector('video');
        if (video) video.pause();
        item.classList.toggle('active', i === index);
      });

      // Update thumbnails
      thumbnails.forEach((thumb, i) => {
        thumb.classList.toggle('active', i === index);
      });

      // Update counter
      if (currentIndexEl) {
        currentIndexEl.textContent = index + 1;
      }

      currentIndex = index;
    }

    function nextVideo() {
      const next = (currentIndex + 1) % videoItems.length;
      showVideo(next);
    }

    function prevVideo() {
      const prev = (currentIndex - 1 + videoItems.length) % videoItems.length;
      showVideo(prev);
    }

    // Arrow navigation
    if (prevBtn) prevBtn.addEventListener('click', prevVideo);
    if (nextBtn) nextBtn.addEventListener('click', nextVideo);

    // Thumbnail navigation
    thumbnails.forEach((thumb, index) => {
      thumb.addEventListener('click', () => showVideo(index));
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') prevVideo();
      if (e.key === 'ArrowRight') nextVideo();
    });

    // Touch/swipe support for mobile
    let touchStartX = 0;
    let touchEndX = 0;

    const videosContainer = container.querySelector('[data-videos-container]');
    videosContainer.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    });

    videosContainer.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      handleSwipe();
    });

    function handleSwipe() {
      const swipeThreshold = 50;
      if (touchEndX < touchStartX - swipeThreshold) nextVideo();
      if (touchEndX > touchStartX + swipeThreshold) prevVideo();
    }

    // Video controls for each video
    videoItems.forEach((item) => {
      const video = item.querySelector('video');
      if (!video) return;

      const playPauseBtn = item.querySelector('[data-play-pause]');
      const muteBtn = item.querySelector('[data-mute]');
      const progressBar = item.querySelector('[data-progress-bar]');
      const progressFill = item.querySelector('[data-progress-fill]');
      const timer = item.querySelector('[data-timer]');

      const playIcon = playPauseBtn.querySelector('.holiday-video-carousel__icon--play');
      const pauseIcon = playPauseBtn.querySelector('.holiday-video-carousel__icon--pause');
      const volumeIcon = muteBtn.querySelector('.holiday-video-carousel__icon--volume');
      const muteIcon = muteBtn.querySelector('.holiday-video-carousel__icon--mute');

      // Play/pause
      playPauseBtn.addEventListener('click', () => {
        if (video.paused) {
          video.play();
          playIcon.style.display = 'none';
          pauseIcon.style.display = 'block';
        } else {
          video.pause();
          playIcon.style.display = 'block';
          pauseIcon.style.display = 'none';
        }
      });

      // Mute/unmute
      muteBtn.addEventListener('click', () => {
        video.muted = !video.muted;
        volumeIcon.style.display = video.muted ? 'none' : 'block';
        muteIcon.style.display = video.muted ? 'block' : 'none';
      });

      // Progress bar
      video.addEventListener('timeupdate', () => {
        const percent = (video.currentTime / video.duration) * 100;
        progressFill.style.width = `${percent}%`;

        // Update timer
        const current = formatTime(video.currentTime);
        const duration = formatTime(video.duration);
        timer.textContent = `${current} / ${duration}`;
      });

      progressBar.addEventListener('click', (e) => {
        const rect = progressBar.getBoundingClientRect();
        const percent = (e.clientX - rect.left) / rect.width;
        video.currentTime = percent * video.duration;
      });

      function formatTime(seconds) {
        const mins = Math.floor(seconds / 60);
        const secs = Math.floor(seconds % 60);
        return `${mins}:${secs.toString().padStart(2, '0')}`;
      }
    });
  })();
</script>

