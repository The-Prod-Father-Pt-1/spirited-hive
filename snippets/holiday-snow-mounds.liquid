{% comment %}
  Holiday Snow Mounds at Bottom
  Creates layered snowy hills at the bottom of the page with Christmas decorations
{% endcomment %}

<div class="holiday-snow-mounds">
  <div class="snow-mound snow-mound--back"></div>
  <div class="snow-mound snow-mound--middle"></div>
  <div class="snow-mound snow-mound--front"></div>

  <!-- Christmas Tree 1 -->
  <div class="christmas-tree christmas-tree--1">
    <svg viewBox="0 0 100 120" xmlns="http://www.w3.org/2000/svg">
      <!-- Tree layers -->
      <polygon points="50,10 20,45 80,45" fill="#1B5E20" />
      <polygon points="50,30 15,65 85,65" fill="#2E7D32" />
      <polygon points="50,50 10,85 90,85" fill="#388E3C" />
      <!-- Trunk -->
      <rect x="42" y="85" width="16" height="20" fill="#5D4037" />
      <!-- Ornaments -->
      <circle cx="50" cy="35" r="3" fill="#F2BD35" />
      <circle cx="40" cy="55" r="3" fill="#DC143C" />
      <circle cx="60" cy="55" r="3" fill="#F2BD35" />
      <circle cx="35" cy="72" r="3" fill="#DC143C" />
      <circle cx="65" cy="72" r="3" fill="#F2BD35" />
      <!-- Star on top -->
      <polygon points="50,2 52,8 58,8 53,12 55,18 50,14 45,18 47,12 42,8 48,8" fill="#F2BD35" />
    </svg>
  </div>

  <!-- Christmas Tree 2 -->
  <div class="christmas-tree christmas-tree--2">
    <svg viewBox="0 0 100 120" xmlns="http://www.w3.org/2000/svg">
      <!-- Tree layers -->
      <polygon points="50,10 20,45 80,45" fill="#1B5E20" />
      <polygon points="50,30 15,65 85,65" fill="#2E7D32" />
      <polygon points="50,50 10,85 90,85" fill="#388E3C" />
      <!-- Trunk -->
      <rect x="42" y="85" width="16" height="20" fill="#5D4037" />
      <!-- Ornaments -->
      <circle cx="45" cy="38" r="3" fill="#DC143C" />
      <circle cx="35" cy="58" r="3" fill="#F2BD35" />
      <circle cx="55" cy="60" r="3" fill="#DC143C" />
      <circle cx="30" cy="75" r="3" fill="#F2BD35" />
      <circle cx="70" cy="75" r="3" fill="#DC143C" />
      <!-- Star on top -->
      <polygon points="50,2 52,8 58,8 53,12 55,18 50,14 45,18 47,12 42,8 48,8" fill="#F2BD35" />
    </svg>
  </div>

  <!-- Christmas Tree 3 -->
  <div class="christmas-tree christmas-tree--3">
    <svg viewBox="0 0 100 120" xmlns="http://www.w3.org/2000/svg">
      <!-- Tree layers -->
      <polygon points="50,10 20,45 80,45" fill="#1B5E20" />
      <polygon points="50,30 15,65 85,65" fill="#2E7D32" />
      <polygon points="50,50 10,85 90,85" fill="#388E3C" />
      <!-- Trunk -->
      <rect x="42" y="85" width="16" height="20" fill="#5D4037" />
      <!-- Ornaments -->
      <circle cx="50" cy="40" r="3" fill="#F2BD35" />
      <circle cx="38" cy="60" r="3" fill="#DC143C" />
      <circle cx="62" cy="58" r="3" fill="#F2BD35" />
      <circle cx="40" cy="78" r="3" fill="#DC143C" />
      <circle cx="60" cy="78" r="3" fill="#F2BD35" />
      <!-- Star on top -->
      <polygon points="50,2 52,8 58,8 53,12 55,18 50,14 45,18 47,12 42,8 48,8" fill="#F2BD35" />
    </svg>
  </div>

  <!-- Snowman -->
  <div class="snowman">
    <svg viewBox="0 0 100 130" xmlns="http://www.w3.org/2000/svg">
      <!-- Bottom snowball -->
      <circle cx="50" cy="100" r="28" fill="#ffffff" />
      <circle cx="50" cy="100" r="28" fill="url(#snowGradient1)" />

      <!-- Middle snowball -->
      <circle cx="50" cy="65" r="22" fill="#ffffff" />
      <circle cx="50" cy="65" r="22" fill="url(#snowGradient2)" />

      <!-- Top snowball (head) -->
      <circle cx="50" cy="35" r="16" fill="#ffffff" />
      <circle cx="50" cy="35" r="16" fill="url(#snowGradient3)" />

      <!-- Top hat -->
      <rect x="35" y="15" width="30" height="3" fill="#1a1a1a" />
      <rect x="40" y="5" width="20" height="12" fill="#1a1a1a" />
      <rect x="40" y="5" width="20" height="2" fill="#DC143C" />

      <!-- Eyes (coal) -->
      <circle cx="45" cy="32" r="2" fill="#1a1a1a" />
      <circle cx="55" cy="32" r="2" fill="#1a1a1a" />

      <!-- Carrot nose -->
      <polygon points="50,35 58,37 50,39" fill="#E68819" />

      <!-- Smile (coal pieces) -->
      <circle cx="44" cy="42" r="1.5" fill="#1a1a1a" />
      <circle cx="47" cy="43" r="1.5" fill="#1a1a1a" />
      <circle cx="50" cy="43.5" r="1.5" fill="#1a1a1a" />
      <circle cx="53" cy="43" r="1.5" fill="#1a1a1a" />
      <circle cx="56" cy="42" r="1.5" fill="#1a1a1a" />

      <!-- Coal buttons -->
      <circle cx="50" cy="60" r="2.5" fill="#1a1a1a" />
      <circle cx="50" cy="70" r="2.5" fill="#1a1a1a" />
      <circle cx="50" cy="80" r="2.5" fill="#1a1a1a" />

      <!-- Stick arms -->
      <line x1="28" y1="65" x2="15" y2="55" stroke="#5D4037" stroke-width="3" stroke-linecap="round" />
      <line x1="15" y1="55" x2="10" y2="50" stroke="#5D4037" stroke-width="2" stroke-linecap="round" />
      <line x1="15" y1="55" x2="12" y2="62" stroke="#5D4037" stroke-width="2" stroke-linecap="round" />

      <line x1="72" y1="65" x2="85" y2="55" stroke="#5D4037" stroke-width="3" stroke-linecap="round" />
      <line x1="85" y1="55" x2="90" y2="50" stroke="#5D4037" stroke-width="2" stroke-linecap="round" />
      <line x1="85" y1="55" x2="88" y2="62" stroke="#5D4037" stroke-width="2" stroke-linecap="round" />

      <!-- Gradients for depth -->
      <defs>
        <radialGradient id="snowGradient1">
          <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#E8F5E9;stop-opacity:1" />
        </radialGradient>
        <radialGradient id="snowGradient2">
          <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#E8F5E9;stop-opacity:1" />
        </radialGradient>
        <radialGradient id="snowGradient3">
          <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#E8F5E9;stop-opacity:1" />
        </radialGradient>
      </defs>
    </svg>
  </div>
</div>
